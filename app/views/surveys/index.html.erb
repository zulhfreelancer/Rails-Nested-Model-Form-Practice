<h1>Surveys</h1>

<% @surveys.each do |survey| %>
  <div class="article">
    <%= link_to survey.name, survey %> | <%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %>
    (<%= pluralize(survey.questions.size, "Question") %>)
  </div>
<% end %>

<p><%= link_to 'New Survey', new_survey_path %></p>
